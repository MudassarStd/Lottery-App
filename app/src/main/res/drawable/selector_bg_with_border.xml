<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected State -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF6200EE" /> <!-- Purple Background -->
            <stroke android:width="2dp" android:color="#FF3700B3" /> <!-- Border -->
            <corners android:radius="8dp" /> <!-- Rounded Corners -->
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White Background -->
            <stroke android:width="2dp" android:color="#FF6200EE" /> <!-- Border -->
            <corners android:radius="8dp" /> <!-- Rounded Corners -->
        </shape>
    </item>
</selector>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".retailer.R_CoinPurchase">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purchase Coins"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:paddingBottom="16dp" />

    <!-- Input for coin amount -->
    <EditText
        android:id="@+id/etCoinAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Coin Amount"
        android:inputType="number"
        android:layout_marginBottom="16dp" />

    <!-- Request purchase button -->
    <Button
        android:id="@+id/btnRequestPurchase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request Purchase"
        android:layout_marginBottom="16dp" />

    <!-- Section for pending purchase requests -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Requests"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingTop="20dp"
        android:paddingBottom="8dp" />


    <RadioGroup
        android:id="@+id/rbGroupRequests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbPending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Pending"/>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbApproved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Approved"/>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbRejected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rejected"/>

    </RadioGroup>

    <ListView
        android:id="@+id/lvPendingRequests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />


    <TextView
        android:id="@+id/tvNoRequestsFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No requests found"
        android:layout_marginTop="12dp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="8dp" />

</LinearLayout>

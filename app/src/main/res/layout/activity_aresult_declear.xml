<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".admin.A_ResultDeclear">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Declare Results"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <!-- Slot Selection -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Time Slot"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerSlot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <!-- Generate Winning Number -->
    <Button
        android:id="@+id/btnGenerateNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate Winning Number"
        android:layout_marginBottom="10dp" />

    <!-- Display Generated Number -->
    <TextView
        android:id="@+id/tvGeneratedNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generated Number: Not Generated"
        android:textSize="18sp"
        android:textColor="@android:color/holo_blue_dark"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Manual Entry -->
    <EditText
        android:id="@+id/etManualNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Winning Number (Optional)"
        android:inputType="number"
        android:layout_marginBottom="16dp" />

    <!-- Publish Results -->
    <Button
        android:id="@+id/btnPublishResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Publish Results"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_green_dark" />
</LinearLayout>
